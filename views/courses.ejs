<%- include('partials/navs') %>

<div class="row">
    <div class="col-md-12">
      <h2>Courses</h2>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Course Code</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
            <% if (courses && courses.length) { %>
              <% courses.forEach(course => { %>
                <tr>
                  <td><a href="/course/<%= course.courseId %>"><%= course.courseCode %></a></td>
                  <td><a href="/students?course=<%= course.courseId %>"><%= course.courseDescription %></a></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr><td colspan="2" class="text-center"><strong><%= message %></strong></td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  